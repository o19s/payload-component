  <!--
  Fields for supporting user-specified groups of fields; These will be empty, but they're
  necessary for query parsing (wildcard queries with q.(field).qf won't work without them)

  <field name="AnyField" type="text_df" multiValued="true" indexed="true" stored="false"/>
  <field name="Rights" type="text_df" multiValued="true" indexed="true" stored="false"/>
  <field name="Miscellaneous" type="text_df" multiValued="true" indexed="true" stored="false"/>
  <field name="People" type="text_df" multiValued="true" indexed="true" stored="false"/>
  <field name="FederalReserveOrganizations" type="text_df" multiValued="true" indexed="true" stored="false"/>
  <field name="Topic" type="text_df" multiValued="true" indexed="true" stored="false"/>
  <field name="FinancialInstitutions" type="text_df" multiValued="true" indexed="true" stored="false"/>
  <field name="Industries" type="text_df" multiValued="true" indexed="true" stored="false"/>
  <field name="Description" type="text_df" multiValued="true" indexed="true" stored="false"/>
  <field name="Statute" type="text_df" multiValued="true" indexed="true" stored="false"/>
  <field name="Identifier" type="text_df" multiValued="true" indexed="true" stored="false"/>
  <field name="Keyword" type="text_df" multiValued="true" indexed="true" stored="false"/>
